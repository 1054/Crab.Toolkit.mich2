    #cp "${deploy_upper_dir}/data/deploy_LVG"/*.sm "${deploy_upper_dir}/data/deploy_LVG"/run*.sh .
    #cp "${deploy_upper_dir}/data/lib_LVG/"lib_*.lvg .
    

fi
