    #echo "$(dirname ${BASH_SOURCE[0]})/michi2-plot-results-of-fitting-5-components \$@" >> "run_plotting_5_components.sh"
    #chmod +x "run_plotting_5_components.sh"
    # 

elif echo "$deploy_type" | grep -q -i "LVG"; then
    
